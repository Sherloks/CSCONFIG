@model IEnumerable<Data.Models.Configuration>

<ol class="breadcrumb">
    <li class="active">Mes configurations</li>
</ol>

<div class="row">

    <div class="col-md-10">
        <h4>Mes configurations</h4>
    </div>
    <div class="col-md-2 text-right">
        <a asp-action="Create" class="btn btn-default">Ajouter</a>
    </div>
    <div class="col-md-12">
        <hr>
    </div>
</div>

    @foreach (var item in Model)
    {
        <div class="panel panel-default col-md-4">
            <div class="panel-body">
                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                <p>Version : @Html.DisplayFor(modelItem => item.Version)</p>
                <p>Date de modification : @Html.DisplayFor(modelItem => item.LastModified)</p>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>

                <div class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.ConfigurationId" class="btn">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.ConfigurationId" class="btn">Supprimer</a>
                </div>

            </div>
        </div>
    }
