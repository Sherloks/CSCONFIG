@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


<div id="rate" class="tab-pane fade">
    
    <div class="row">
        <div class="form-horizontal">

            <div class="form-group">

                <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Localizer["Rate Tooltip"]"></span> @Localizer["Rate"]</label>
                <div class="col-md-6">
                    <input id="rate-slider" class="form-control" type="range" min="500" max="128000" step="10" />
                </div>
                <div class="col-md-1">
                    <input id="rate-input" class="form-control form-control-inline" type="number" min="500" max="128000" step="10" />
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Localizer["CMD Rate Tooltip"]"></span> @Localizer["CMD Rate"]</label>
                <div class="col-md-6">
                    <input id="cmd-rate-slider" class="form-control" type="range" min="10" max="128" step="1 />
                </div>
                <div class="col-md-1">
                    <input id="cmd-rate-input" class="form-control form-control-inline" type="number" min="10" max="128" step="1" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Localizer["Update Rate Tooltip"]"></span> @Localizer["Update Rate"]</label>
                <div class="col-md-6">
                    <input id="update-rate-slider" class="form-control" type="range" min="10" max="128" step="1" />
                </div>
                <div class="col-md-1">
                    <input id="update-rate-input" class="form-control form-control-inline" type="number" min="10" max="128" step="1" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Localizer["Interp Tooltip"]"></span> @Localizer["Interp"]</label>
                <div class="col-md-6">
                    <input id="interp-slider" class="form-control" type="range" min="0.00" max="0.50" step="0.01" />
                </div>
                <div class="col-md-1">
                    <input id="interp-input" class="form-control form-control-inline" type="number" min="0.00" max="0.50" step="0.01" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Localizer["Interp Ratio Tooltip"]"></span> @Localizer["Interp Ratio"]</label>
                <div class="col-md-6">
                    <input id="interp-ratio-slider" class="form-control" type="range" min="1" max="2" step="0.01" />
                </div>
                <div class="col-md-1">
                    <input id="interp-ratio-input" class="form-control form-control-inline" type="number" min="1" max="2" step="0.01" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Localizer["Lag Compensation Tooltip"]"></span> @Localizer["Lag Compensation"]</label>
                <div class="col-md-1">
                    <div class="material-switch form-control-switch">
                        <input id="someSwitchOptionDefault" name="someSwitchOption001" type="checkbox" />
                        <label for="someSwitchOptionDefault" class="label-default"></label>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>