@model IEnumerable<Data.Models.AttributeType>

@{
    ViewData["Title"] = "Index";
}

<ol class="breadcrumb">
    <li><a href="#">Administration</a></li>
    <li class="active">Gestion des types d'attributs</li>
</ol>
<div class="row">

    <div class="col-md-10">
        <h4>Gestion des types d'attributs</h4>
    </div>
    <div class="col-md-2 text-right">
        <a asp-action="Create" class="btn btn-default">Ajouter</a>
    </div>
    <div class="col-md-12">
        <hr>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
                <th class="col-md-10">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th class="col-md-2 text-right"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-right">
                <a asp-action="Edit" asp-route-id="@item.AttributeTypeId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.AttributeTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
