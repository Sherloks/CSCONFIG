@model Data.Models.ConfigurationAttribute

<div class="form-group">

    <label class="col-md-3 control-label"><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" title="" data-original-title="@Model.Attribute.Tooltip"></span> @Model.Attribute.Name</label>
    <div class="col-md-6">
        <input id="@(Model.Attribute.CVar + "-slider")" class="form-control" type="range" min="0" max="1.0" step="0.01" />
    </div>
    <div class="col-md-1">
        <input id="@(Model.Attribute.CVar + "-input")" asp-for="@Model.Value" class="form-control form-control-inline" type="number" min="0.0" max="1.0" step="0.01" />
    </div>

</div>